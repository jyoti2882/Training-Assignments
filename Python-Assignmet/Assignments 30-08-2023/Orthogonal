<?php
function Orthogonal($x1,$y1,$x2,$y2,$x3,$y3,$x4,$y4){

    $slope1=($y2-$y1)/($x2-$x1);
    $slope2=($y4-$y3)/($x4-$x3);
    if($slope1*$slope2==-1){
        echo "They can form a orthogonal line";
    }else{
        echo "They are not orthogonal lines";
    }
}

Orthogonal(2,3,4,5,6,7,8,1);

?>
